<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <Button
        android:id="@+id/transfer_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="#7ACCC0"
        android:padding="10sp"
        android:text="TRANSFER "
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/select_button"
        app:layout_constraintEnd_toStartOf="@+id/select_button"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ButtonStyle,HardcodedText" />

    <Button
        android:id="@+id/select_button"
        android:layout_width="0dp"
        android:layout_marginEnd="8dp"
        android:layout_height="wrap_content"
        android:background="#7ACCC0"
        android:padding="10sp"
        android:text="@string/select_all"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/send_to_friend_button"
        app:layout_constraintStart_toEndOf="@+id/transfer_button"
        tools:ignore="ButtonStyle" />

    <Button
        android:id="@+id/send_to_friend_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#7ACCC0"
        android:padding="10sp"
        android:text="SEND TO USER"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/select_button"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ButtonStyle,HardcodedText" />
</android.support.constraint.ConstraintLayout>
